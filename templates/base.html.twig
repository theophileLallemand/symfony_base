<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Backoffice{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="{{ asset('css/backoffice.css') }}">
    {% block stylesheets %}{% endblock %}
</head>

<body class="bg-gray-100 min-h-screen flex">

    <aside class="w-64 bg-gray-800 text-white flex flex-col">
        <div class="p-6 text-xl font-bold border-b border-gray-700">
            Backoffice
        </div>

        <nav class="flex-1 p-4 space-y-2">
            <a href="{{ path('app_dashboard') }}"
               class="block px-4 py-2 rounded hover:bg-gray-700 transition">
                ğŸ“Š Dashboard
            </a>

            <a href="{{ path('product_index') }}"
               class="block px-4 py-2 rounded hover:bg-gray-700 transition">
                ğŸ“¦ Produits
            </a>

            {% if is_granted(['ROLE_ADMIN']) or is_granted(['ROLE_MANAGER']) %}
                <a href="{{ path('client_index') }}"
                   class="block px-4 py-2 rounded hover:bg-gray-700 transition">
                    ğŸ‘¥ Clients
                </a>
            {% endif %}

            {% if is_granted(['ROLE_ADMIN']) %}
                <a href="{{ path('user_index') }}"
                   class="block px-4 py-2 rounded hover:bg-gray-700 transition">
                    ğŸ” Utilisateurs
                </a>
            {% endif %}
        </nav>

        <div class="p-4 border-t border-gray-700">
            {% if app.user %}
                <div class="text-sm mb-3">
                    ConnectÃ© en tant que<br>
                    <strong>{{ app.user.firstname }} {{ app.user.lastname }}</strong>
                </div>

                <a href="{{ path('app_logout') }}"
                   class="block text-center bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded transition">
                    ğŸšª DÃ©connexion
                </a>
            {% else %}
                {# Connexion DEV uniquement (route existante) #}
                <a href="{{ path('dev_login_admin') }}"
                   class="block text-center bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition">
                    ğŸ”‘ Connexion (admin dev)
                </a>
            {% endif %}
        </div>
    </aside>

    <main class="flex-1 p-6">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-4 px-4 py-2 rounded
                    {% if label == 'success' %}bg-green-100 text-green-800{% endif %}
                    {% if label == 'error' %}bg-red-100 text-red-800{% endif %}
                ">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </main>

    {% block javascripts %}{% endblock %}
</body>
</html>
