{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="p-6 space-y-6">

    <div class="flex items-start justify-between gap-6 flex-wrap">
        <div>
            <h1 class="text-2xl font-bold">Dashboard</h1>
            <p class="text-gray-600 mt-1">
                Bienvenue {{ app.user ? app.user.firstname : '' }} {{ app.user ? app.user.lastname : '' }}
            </p>
        </div>

        <div class="flex gap-3 flex-wrap">

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('product_new') }}"
                   class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                    Ajouter un produit
                </a>
            {% endif %}
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">

        <div class="bg-white shadow rounded p-6 border border-[#eee5d9]">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-500">Produits</div>
                <span class="text-xs font-semibold px-2.5 py-1 rounded-full bg-[#f6f0e7] text-[#7a5b2e] border border-[#eee5d9]">
                    Catalogue
                </span>
            </div>

            <div class="mt-4 text-4xl font-extrabold tracking-tight">
                {{ productCount }}
            </div>

            <div class="mt-5 flex gap-3 flex-wrap">
                <a href="{{ path('product_index') }}"
                   class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                    Voir le catalogue
                </a>

                <a href="{{ path('product_export_csv') }}"
                   class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
                    Export CSV
                </a>
            </div>
        </div>

        <div class="bg-white shadow rounded p-6 border border-[#eee5d9]">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-500">Clients</div>
                <span class="text-xs font-semibold px-2.5 py-1 rounded-full bg-[#f6f0e7] text-[#7a5b2e] border border-[#eee5d9]">
                    Fiches
                </span>
            </div>

            <div class="mt-4 text-4xl font-extrabold tracking-tight">
                {{ clientCount }}
            </div>

            <div class="mt-5">
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
                    <a href="{{ path('client_index') }}"
                       class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 transition">
                        Voir les clients
                    </a>
                {% else %}
                    <span class="text-sm text-gray-400">
                        Accès restreint (admin / manager)
                    </span>
                {% endif %}
            </div>
        </div>

        <div class="bg-white shadow rounded p-6 border border-[#eee5d9]">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-500">Utilisateurs</div>
                <span class="text-xs font-semibold px-2.5 py-1 rounded-full bg-[#f6f0e7] text-[#7a5b2e] border border-[#eee5d9]">
                    Comptes
                </span>
            </div>

            <div class="mt-4 text-4xl font-extrabold tracking-tight">
                {{ userCount }}
            </div>

            <div class="mt-5">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('user_index') }}"
                       class="bg-gray-800 text-white px-4 py-2 rounded hover:bg-gray-700 transition">
                        Gérer les comptes
                    </a>
                {% else %}
                    <span class="text-sm text-gray-400">
                        Admin uniquement
                    </span>
                {% endif %}
            </div>
        </div>

    </div>

    <div class="bg-white shadow rounded p-6 border border-[#eee5d9]">
        <div class="flex items-center justify-between flex-wrap gap-4">
            <h2 class="text-lg font-semibold">Actions rapides</h2>
            <span class="text-sm text-gray-500">
                Accès direct aux fonctionnalités principales
            </span>
        </div>

        <div class="mt-5 grid grid-cols-1 md:grid-cols-3 gap-3">
            <a href="{{ path('product_export_csv') }}"
               class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
                Exporter les produits (CSV)
            </a>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('user_index') }}"
                   class="bg-gray-800 text-white px-4 py-2 rounded hover:bg-gray-700 transition">
                    Gérer les utilisateurs
                </a>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
                <a href="{{ path('client_index') }}"
                   class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 transition">
                    Gérer les clients
                </a>
            {% endif %}
        </div>
    </div>

</div>
{% endblock %}
