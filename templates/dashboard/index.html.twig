{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="p-6 space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold">Dashboard</h1>
            <p class="text-gray-600 mt-1">
                Bienvenue {{ app.user ? app.user.firstname : '' }} {{ app.user ? app.user.lastname : '' }}
            </p>
        </div>

        <div class="flex gap-3">
            <a href="{{ path('product_index') }}"
               class="bg-gray-900 text-white px-4 py-2 rounded hover:bg-gray-800 transition">
                Voir les produits
            </a>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('product_new') }}"
                   class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                    Ajouter un produit
                </a>
            {% endif %}
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white shadow rounded p-5">
            <div class="text-sm text-gray-500">Produits</div>
            <div class="text-3xl font-bold mt-2">{{ productCount }}</div>
            <div class="mt-4">
                <a class="text-blue-600 hover:underline" href="{{ path('product_index') }}">Accéder</a>
            </div>
        </div>

        <div class="bg-white shadow rounded p-5">
            <div class="text-sm text-gray-500">Clients</div>
            <div class="text-3xl font-bold mt-2">{{ clientCount }}</div>
            <div class="mt-4">
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
                    <a class="text-blue-600 hover:underline" href="{{ path('client_index') }}">Accéder</a>
                {% else %}
                    <span class="text-gray-400">Accès restreint</span>
                {% endif %}
            </div>
        </div>

        <div class="bg-white shadow rounded p-5">
            <div class="text-sm text-gray-500">Utilisateurs</div>
            <div class="text-3xl font-bold mt-2">{{ userCount }}</div>
            <div class="mt-4">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="text-blue-600 hover:underline" href="{{ path('user_index') }}">Accéder</a>
                {% else %}
                    <span class="text-gray-400">Accès admin</span>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="bg-white shadow rounded p-6">
        <h2 class="text-lg font-semibold mb-4">Actions rapides</h2>

        <div class="flex flex-wrap gap-3">
            <a href="{{ path('product_export_csv') }}"
               class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
                Exporter les produits (CSV)
            </a>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('user_index') }}"
                   class="bg-gray-800 text-white px-4 py-2 rounded hover:bg-gray-700 transition">
                    Gérer les utilisateurs
                </a>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
                <a href="{{ path('client_index') }}"
                   class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 transition">
                    Gérer les clients
                </a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
