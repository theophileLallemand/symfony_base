{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center px-4">

    <div class="w-full max-w-md bg-white shadow rounded p-8 border border-[#eee5d9]">

        <h1 class="text-2xl font-extrabold mb-2 text-center">
            Connexion (dev)
        </h1>

        <p class="text-sm text-gray-600 text-center mb-6">
            Accès au backoffice – environnement de développement
        </p>

        {% if app.user %}
            <div class="mb-4 px-4 py-3 rounded bg-green-100 text-green-800 border border-green-200 text-sm text-center">
                Vous êtes déjà connecté en tant que
                <strong>{{ app.user.firstname }} {{ app.user.lastname }}</strong>
            </div>

            <div class="flex gap-3 justify-center">
                <a href="{{ path('app_dashboard') }}"
                   class="bg-gray-900 text-white px-4 py-2 rounded hover:bg-gray-800 transition">
                    Aller au dashboard
                </a>

                <a href="{{ path('app_logout') }}"
                   class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition">
                    Déconnexion
                </a>
            </div>
        {% else %}

            {% if error %}
                <div class="mb-4 px-4 py-3 rounded bg-red-100 text-red-800 border border-red-200 text-sm">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {# IMPORTANT : on POST vers dev_login_admin #}
            <form method="post" action="{{ path('dev_login_admin') }}" class="space-y-4">

                <div>
                    <label for="inputEmail" class="block text-sm font-semibold mb-1">
                        Email
                    </label>
                    <input
                        type="email"
                        id="inputEmail"
                        name="email"
                        value="{{ app.request.query.get('email') ?? '' }}"
                        required
                        autofocus
                        class="w-full px-4 py-3 rounded border border-[#eee5d9]
                               focus:outline-none focus:ring-2
                               focus:ring-[rgba(201,173,131,.4)]"
                    >
                </div>

                <div>
                    <label for="inputPassword" class="block text-sm font-semibold mb-1">
                        Mot de passe
                    </label>
                    <input
                        type="password"
                        id="inputPassword"
                        name="password"
                        required
                        class="w-full px-4 py-3 rounded border border-[#eee5d9]
                               focus:outline-none focus:ring-2
                               focus:ring-[rgba(201,173,131,.4)]"
                    >
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button
                    type="submit"
                    class="w-full bg-blue-600 text-white py-3 rounded hover:bg-blue-700 transition font-semibold"
                >
                    Se connecter
                </button>
            </form>

            <div class="mt-6 pt-4 border-t border-[#eee5d9] text-center text-sm text-gray-500">
                Utilisez le compte administrateur de développement
            </div>

        {% endif %}

    </div>

</div>
{% endblock %}
