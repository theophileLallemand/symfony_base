{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
<div class="p-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">Gestion des produits</h1>

        <div class="flex gap-3">
            <a href="{{ path('product_export_csv') }}"
               class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
                Exporter CSV
            </a>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('product_new') }}"
                   class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                    Ajouter un produit
                </a>
            {% endif %}
        </div>
    </div>

    <div class="bg-white shadow rounded overflow-x-auto">
        <table class="min-w-full border border-gray-200">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 text-left border">Nom</th>
                    <th class="px-4 py-2 text-left border">Description</th>
                    <th class="px-4 py-2 text-right border">Prix (€)</th>
                    <th class="px-4 py-2 text-center border">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-2 border">{{ product.name }}</td>
                        <td class="px-4 py-2 border">{{ product.description }}</td>
                        <td class="px-4 py-2 border text-right">{{ product.price|number_format(2, ',', ' ') }}</td>
                        <td class="px-4 py-2 border text-center">
                            <div class="flex items-center justify-center gap-3">
                                <a href="{{ path('product_show', {id: product.id}) }}"
                                   class="text-blue-600 hover:underline">
                                    Voir
                                </a>

                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('product_edit', {id: product.id}) }}"
                                       class="text-yellow-600 hover:underline">
                                        Modifier
                                    </a>

                                    <form method="post" action="{{ path('product_delete', {id: product.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_product_' ~ product.id) }}">
                                        <button type="submit"
                                                class="text-red-600 hover:underline"
                                                onclick="return confirm('Supprimer ce produit ?')">
                                            Supprimer
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-6 text-gray-500">
                            Aucun produit enregistré
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
